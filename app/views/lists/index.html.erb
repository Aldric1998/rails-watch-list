<h1>lists</h1>

  <div class="row">
    <% @lists.each do |list| %>
       <div class="col-xs-12 col-sm-4">
          <div class="cards">
            <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
              <div class="card">
                    <%= list.name %>
                    <p> ----------- </p>
                    <%= "Category: #{list.name}"  %>
                    <button class="m-2"><%= link_to 'details', list%></button>
              </div>
          </div>
        </div>
    <% end %>
  </div>
  <hr>
  <div><p>Adding new lists</p></div>
  <hr>
  <button class="m-2"><p><%= link_to 'Add', new_list_path%> </p></button>
